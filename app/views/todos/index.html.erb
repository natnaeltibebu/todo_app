<div>
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>Todos</h2>
    <%= link_to "New todo", new_todo_path, class: "button" %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.title %></td>
          <td><%= todo.description %></td>
          <td><%= todo.status %></td>
          <td class="actions">
            <%= link_to "View", todo, class: "button" %>
            <%= link_to "Edit", edit_todo_path(todo), class: "button" %>
            <%= button_to "Delete", todo, method: :delete, class: "button button-red" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>